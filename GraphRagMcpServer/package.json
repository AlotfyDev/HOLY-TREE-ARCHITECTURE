{
  "name": "graph-rag-mcp-server",
  "version": "1.0.0",
  "description": "Graph-Based RAG MCP Server for intelligent knowledge retrieval and reasoning from software documentation and trading domain knowledge",
  "main": "build/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
