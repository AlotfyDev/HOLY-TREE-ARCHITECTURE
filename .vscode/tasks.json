{
    "version": "2.0.0",
    "tasks": [
        // üèõÔ∏è HOLY TREE ARCHITECTURE Build Tasks
        {
            "label": "HOLY TREE Configure",         // üèóÔ∏è Configure HOLY TREE Build System
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "HOLY TREE Build",             // üèóÔ∏è Build HOLY TREE Framework
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--config", "Release",
                "--parallel", "8"
            ],
            "group": "build",
            "dependsOn": "HOLY TREE Configure",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "HOLY TREE Clean",             // üßπ Clean HOLY TREE Build Artifacts
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--target", "clean"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "HOLY TREE Rebuild",           // üîÑ Full HOLY TREE Rebuild
            "type": "shell",
            "command": "rmdir",
            "args": [
                "/S", "/Q", "${workspaceFolder}\\build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },

        // üêç HOLY TREE MCP Servers Tasks
        {
            "label": "HOLY TREE Start All MCPs",     // üåä Start All HOLY TREE MCP Servers
            "type": "shell",
            "command": "python",
            "args": ["integration_framework.py", "--start-all"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "dependsOn": [
                "HOLY TREE Setup Environment"
            ]
        },
        {
            "label": "HOLY TREE Start HolyTree MCP", // üèõÔ∏è Start HolyTree ASCII Parser
            "type": "shell",
            "command": "python",
            "args": ["HolyTree_MCP\\holy_tree_server.py", "--port", "3001"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "dependsOn": [
                "HOLY TREE Setup Environment"
            ]
        },
        {
            "label": "HOLY TREE Start GraphRAG MCP",  // üîç Start GraphRAG Cognitive Intelligence
            "type": "shell",
            "command": "cd",
            "args": ["GraphRagMcpServer", "&&", "npm", "start"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "dependsOn": [
                "HOLY TREE Setup Environment"
            ]
        },
        {
            "label": "HOLY TREE Start Documentation MCP", // üìÑ Start Documentation Hyperlinker
            "type": "shell",
            "command": "python",
            "args": ["DocumentationMCP_Server\\documentation_server.py", "--port", "3002"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "dependsOn": [
                "HOLY TREE Setup Environment"
            ]
        },
        {
            "label": "HOLY TREE Start CodeAnalysis MCP", // üîç Start Code Analysis MCP
            "type": "shell",
            "command": "python",
            "args": ["CodeAnalysisServer_MCP\\mcp_server.py", "--port", "3003"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "dependsOn": [
                "HOLY TREE Setup Environment"
            ]
        },

        // üèóÔ∏è HOLY TREE Environment Setup Tasks
        {
            "label": "HOLY TREE Setup Environment",     // üêç Setup HOLY TREE Python Environment
            "type": "shell",
            "command": "python",
            "args": ["-m", "venv", "${workspaceFolder}/.venv"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "dependsOrder": "sequence"
        },
        {
            "label": "HOLY TREE Install Dependencies",   // üì¶ Install HOLY TREE Dependencies
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pip.exe",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": [
                "HOLY TREE Setup Environment"
            ]
        },

        // üìä HOLY TREE Framework Tests
        {
            "label": "HOLY TREE Test Framework",       // üß™ Test HOLY TREE Framework
            "type": "shell",
            "command": "python",
            "args": ["-m", "pytest", "tests/", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$python"
        },
        {
            "label": "HOLY TREE Demo Framework",       // üéØ Run HOLY TREE Demos
            "type": "shell",
            "command": "python",
            "args": ["demo_framework.py"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },

        // üìã HOLY TREE Documentation Tasks
        {
            "label": "HOLY TREE Update Documentation",  // üìö Update HOLY TREE Docs
            "type": "shell",
            "command": "python",
            "args": ["hyperlinked_docs\\update_docs.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
